{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-underscore-dangle": "off",
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "implicit-arrow-linebreak": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
