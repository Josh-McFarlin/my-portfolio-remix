{
  "name": "web",
  "description": "The frontend code for the portfolio website",
  "author": "Josh McFarlin <josh@mcfarl.in>",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "main": "dist/worker.js",
  "scripts": {
    "lint": "eslint --fix --ext ts,tsx,js,jsx .",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "miniflare:dev": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "miniflare:prod": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:remix": "remix watch",
    "dev:css": "postcss styles/**/*.scss --dir src/styles --ext css -w",
    "dev:worker": "miniflare --debug --build-command \"npm run miniflare:dev\" --watch",
    "dev": "run-p dev:*",
    "build:css": "postcss styles/**/*.scss --dir src/styles --ext css --env production",
    "build:css2": "postcss src/**/*.scss --dir src/styles --ext css --env production",
    "build:remix": "remix build",
    "build:sitemap": "node exportSitemap.js",
    "build": "run-s build:*",
    "deploy": "npm run build && wrangler publish",
    "postinstall": "patch-package && remix setup cloudflare-workers && npm run build:css"
  },
  "dependencies": {
    "@iconify/react": "^3.1.0",
    "@rehooks/component-size": "^1.0.3",
    "@remix-run/cloudflare-workers": "^1.0.6",
    "@remix-run/react": "^1.0.6",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/client": "^2.23.0",
    "@sanity/groq-store": "^0.2.2",
    "@sanity/image-url": "^1.0.1",
    "clsx": "^1.1.1",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "focus-visible": "^5.2.0",
    "framer-motion": "^5.4.5",
    "isomorphic-unfetch": "^3.1.0",
    "lodash": "^4.17.21",
    "next-sanity-image": "^3.2.1",
    "normalize.css": "^8.0.1",
    "picosanity": "^3.0.2",
    "postcss-discard-comments": "^5.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-inlinesvg": "^2.3.0",
    "react-intersection-observer": "^8.33.0",
    "react-router-dom": "^6.1.1",
    "remix": "^1.0.6",
    "resize-observer-polyfill": "^1.5.1",
    "sitemap": "^7.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@csstools/postcss-sass": "^4.0.0",
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "dotenv-cli": "^4.1.1",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.5",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-modules": "^4.2.2",
    "postcss-scss": "^4.0.2",
    "postcss-strip-inline-comments": "^0.1.5",
    "precss": "^4.0.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  }
}
