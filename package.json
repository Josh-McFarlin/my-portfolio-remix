{
  "name": "my-portfolio-remix",
  "description": "A portfolio website using React, Remix, and Sanity",
  "author": "Josh McFarlin <josh@mcfarl.in>",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --fix --ext ts,tsx,js,jsx .",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,css,scss,md,json}",
    "prepare": "husky install"
